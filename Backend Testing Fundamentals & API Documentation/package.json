{
  "name": "todo-auth-integration",
  "version": "1.0.0",
  "description": "Express.js app with JWT auth and todos + integration tests (jest + supertest)",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "test": "jest --runInBand"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0"
  },
  "devDependencies": {
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "jest-html-reporter": "^3.5.0"
  },
  "jest": {
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-html-reporter",
        {
          "outputPath": "./test-report/report.html",
          "pageTitle": "Test Report"
        }
      ]
    ]
  }
}